generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(uuid())
  name        String
  email       String  @unique
  created_at  DateTime    @default(now())

  @@map("users")
}

model Surveys {
  id            String  @id @default(uuid())
  title         String
  description   String
  created_at    DateTime  @default(now())

  @@map("surveys")
}